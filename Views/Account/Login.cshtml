@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
    }

    .auth-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        /* Gradient pastel nhẹ từ đỏ nhạt đến xanh nhạt */
        background: linear-gradient(135deg, #ffe6e6, #e6ffe6);
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        font-family: 'Merriweather', serif;
        color: #4a4a4a;
    }

    h2 {
        font-size: 28px;
        text-align: center;
        color: #8B0000; /* Đỏ sẫm */
        margin-bottom: 20px;
        text-transform: uppercase;
    }

    .form-label {
        font-weight: bold;
        color: #8B0000;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px;
        border: 1px solid #ccc;
        font-size: 16px;
    }

    .btn-primary {
        background-color: #8B0000; /* Đỏ sẫm */
        border: none;
        padding: 12px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 30px;
        transition: 0.3s ease-in-out;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #2E8B57; /* Xanh lá đậm */
            transform: scale(1.05);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

    .text-decoration-none {
        color: #8B0000;
        font-weight: bold;
    }

        .text-decoration-none:hover {
            text-decoration: underline;
        }

    #loading {
        display: none;
    }
</style>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="auth-container">
                <h2>Login</h2>

                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                }

                <form asp-action="Login" method="post" onsubmit="showLoading()">
                    <div class="mb-3">
                        <label class="form-label">Email:</label>
                        <input type="email" name="email" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Password:</label>
                        <input type="password" name="password" class="form-control" required />
                    </div>

                    <button type="submit" class="btn btn-primary">Login</button>
                </form>

                <p class="mt-3 text-center">
                    <a href="@Url.Action("ResetPassword", "Account")" class="text-decoration-none">Forgot your password?</a>
                </p>

                <p class="mt-3 text-center">
                    Don't have an account?
                    <a href="@Url.Action("Register", "Account")" class="text-decoration-none">Register</a>
                </p>

                <div id="loading" class="text-center mt-3">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Logging in...</span>
                    </div>
                    <p>Logging in, please wait...</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showLoading() {
            document.getElementById("loading").style.display = "block";
        }
    </script>
}
