@model JamesThewProject.Models.SubscriptionPlan

@{
    ViewData["Title"] = "Edit Subscription Plan";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3 text-primary">Edit Subscription Plan</h2>

    <form asp-action="EditPlan" method="post" class="shadow p-4 rounded bg-white">
        <!-- Giữ lại ID của plan -->
        <input type="hidden" id="PlanId" name="PlanId" value="@Model.PlanId" />

        <!-- Plan Name (readonly) -->
        <div class="mb-3">
            <label for="PlanName" class="form-label">Plan Name</label>
            <input type="text" id="PlanName" name="PlanName" class="form-control" value="@Model.PlanName" readonly />
        </div>

        <!-- Description (readonly) -->
        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            <textarea id="Description" name="Description" class="form-control" rows="3" readonly>@Model.Description</textarea>
        </div>

        <!-- Price (readonly) -->
        <div class="mb-3">
            <label for="Price" class="form-label">Price ($)</label>
            <input type="text" id="Price" name="Price" class="form-control" value="@Model.Price" readonly />
        </div>

        <!-- Duration (readonly) -->
        <div class="mb-3">
            <label for="DurationInDays" class="form-label">Duration (days)</label>
            <input type="text" id="DurationInDays" name="DurationInDays" class="form-control" value="@Model.DurationInDays" readonly />
        </div>

        <!-- Status: Dropdown chọn Active/Deactive -->
        <div class="mb-3">
            <label for="IsActive" class="form-label">Status</label>
            <select id="IsActive" name="IsActive" class="form-control">
                <option value="true" @(Model.IsActive ? "selected" : "")>Active</option>
                <option value="false" @(!Model.IsActive ? "selected" : "")>Deactive</option>
            </select>
        </div>

        <!-- Created At (readonly) -->
        <div class="mb-3">
            <label for="CreatedAt" class="form-label">Created At</label>
            <input type="text" id="CreatedAt" name="CreatedAt" class="form-control" value="@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")" readonly />
        </div>

        <!-- Last Updated At (readonly) -->
        <div class="mb-3">
            <label for="UpdatedAt" class="form-label">Last Updated At</label>
            <input type="text" id="UpdatedAt" name="UpdatedAt" class="form-control" value="@Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")" readonly />
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="@Url.Action("ManagePlans", "Admin")" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
