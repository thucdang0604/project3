@{
    ViewData["Title"] = "Change Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow change-password-card">
                <div class="card-body">
                    <h2 class="text-center card-title">Change Password</h2>

                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                    }
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="alert alert-success">@ViewBag.Message</div>
                    }

                    <form asp-action="ChangePassword" method="post">
                        <div class="form-group mt-3">
                            <label class="form-label">Current Password:</label>
                            <input type="password" name="currentPassword" class="form-control" required />
                        </div>
                        <div class="form-group mt-3">
                            <label class="form-label">New Password:</label>
                            <input type="password" name="newPassword" class="form-control" required />
                        </div>
                        <div class="form-group mt-3">
                            <label class="form-label">Confirm New Password:</label>
                            <input type="password" name="confirmPassword" class="form-control" required />
                        </div>
                        <div class="d-flex justify-content-center mt-4">
                            <button type="submit" class="btn btn-change">Change Password</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a href="@Url.Action("Profile", "Account")" class="back-link">Back to Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Container chung, không ghi đè layout toàn cục */
    .change-password-card {
        border: none;
        border-radius: 10px;
        /* Sử dụng nền gradient nhẹ, kết hợp đỏ sẫm và xanh lá đậm */
        background: linear-gradient(135deg, #ffe6e6, #e6ffe6);
        /* Có thể điều chỉnh độ mờ cho background nếu cần */
    }

    .card-title {
        font-size: 28px;
        font-weight: bold;
        color: #8B0000; /* Màu đỏ sẫm */
        margin-bottom: 20px;
        text-transform: uppercase;
        border-bottom: 2px solid #8B0000;
        padding-bottom: 10px;
    }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    .form-control {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px 14px;
        font-size: 16px;
    }

    /* Nút Change Password: sử dụng màu đỏ sẫm, hover chuyển sang tông đỏ sáng */
    .btn-change {
        background-color: #8B0000;
        color: #fff;
        padding: 12px 30px;
        font-size: 16px;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        text-transform: uppercase;
        transition: background 0.3s ease, transform 0.3s ease;
    }

        .btn-change:hover {
            background-color: #a52a2a;
            transform: scale(1.05);
        }

    /* Back link: sử dụng tông xanh lá đậm */
    .back-link {
        color: #2E8B57;
        font-size: 16px;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .back-link:hover {
            color: #228B22;
        }

    /* Alert messages */
    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border-color: #f5c6cb;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border-color: #c3e6cb;
    }

    /* Responsive adjustments */
    @@media (max-width: 576px) {
        .card-title

    {
        font-size: 24px;
    }

    }
</style>
