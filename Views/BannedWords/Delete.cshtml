@model JamesThewProject.Models.BannedWord
@{
    ViewData["Title"] = "Delete Banned Word";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Delete Banned Word</h2>
    <div class="alert alert-warning">
        Are you sure you want to delete this word: <strong>@Model.Word</strong>?
    </div>
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="BannedWordId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
