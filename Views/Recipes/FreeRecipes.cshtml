            transform: scale(1.03);
            box-shadow: 0 6px 15px rgba(0,0,0,0.25);
        }

    /* Ảnh recipe */
    .card-img-top {
        height: 180px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 10px;
    }

    /* NỀN TRẮNG MỜ CHO NỘI DUNG */
    .recipe-card .card-body {
        background-color: rgba(255, 255, 255, 0.7);
        border-radius: 8px;
        padding: 15px;
        color: #333;
    }

    /* Tiêu đề Recipe */
    .card-title {
        font-size: 1.25rem;
        color: #8B0000; /* Đỏ sẫm */
        margin-bottom: 8px;
        font-weight: bold;
    }

    .card-text {
        font-size: 0.95rem;
        color: #555;
    }

    /* Nút "View Details" */
    .btn-view {
        background-color: #8B0000; /* Đỏ sẫm */
        color: #fff;
        padding: 8px 12px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 8px;
        transition: 0.3s;
        text-decoration: none;
        margin-right: 5px;
        border: none;
    }

        .btn-view:hover {
            background-color: #2E8B57; /* Xanh lá đậm */
            transform: scale(1.05);
            color: #fff;
        }

    /* Nút "Add to Favorites" */
    .btn-favorite {
        background-color: #2E8B57; /* Xanh lá đậm */
        color: #fff;
        padding: 8px 12px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 8px;
        transition: 0.3s;
        border: none;
    }

        .btn-favorite:hover {
            background-color: #8B0000; /* Đỏ sẫm */
            transform: scale(1.05);
        }

    /* Tiêu đề h2 */
    h2 {
        text-align: center;
        color: #8B0000; /* Đỏ sẫm */
        margin-bottom: 30px;
        font-weight: bold;
        text-transform: uppercase;
        border-bottom: 2px solid #8B0000;
        padding-bottom: 10px;
    }
</style>
