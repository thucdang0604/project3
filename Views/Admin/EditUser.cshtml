@model JamesThewProject.Models.User
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit User";
}

<h1>Edit User</h1>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="EditUser" asp-controller="Admin" asp-route-id="@Model.UserId" method="post">
    @Html.AntiForgeryToken()

    <!-- Hidden field for UserId -->
    <input type="hidden" name="UserId" value="@Model.UserId" />

    <!-- Email (disabled + hidden) -->
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" value="@Model.Email" disabled />
        <input type="hidden" name="Email" value="@Model.Email" />
    </div>

    <!-- Full Name (disabled + hidden) -->
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" value="@Model.FullName" disabled />
        <input type="hidden" name="FullName" value="@Model.FullName" />
    </div>

    <!-- Date of Birth (disabled + hidden) -->
    <div class="form-group">
        <label>Date of Birth</label>
        <input type="text" class="form-control"
               value="@(Model.DateOfBirth.HasValue ? Model.DateOfBirth.Value.ToString("dd/MM/yyyy") : "")" disabled />
        <input type="hidden" name="DateOfBirth" value="@(Model.DateOfBirth.HasValue ? Model.DateOfBirth.Value.ToString("yyyy-MM-dd") : "")" />
    </div>

    <!-- Gender (disabled + hidden) -->
    <div class="form-group">
        <label>Gender</label>
        <input type="text" class="form-control" value="@Model.Gender" disabled />
        <input type="hidden" name="Gender" value="@Model.Gender" />
    </div>

    <!-- Address (disabled + hidden) -->
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" value="@Model.Address" disabled />
        <input type="hidden" name="Address" value="@Model.Address" />
    </div>

    <!-- Phone Number (disabled + hidden) -->
    <div class="form-group">
        <label>Phone Number</label>
        <input type="text" class="form-control" value="@Model.PhoneNumber" disabled />
        <input type="hidden" name="PhoneNumber" value="@Model.PhoneNumber" />
    </div>

    <!-- Membership Type (disabled + hidden) -->
    <div class="form-group">
        <label>Membership Type</label>
        <input type="text" class="form-control" value="@Model.MembershipType" disabled />
        <input type="hidden" name="MembershipType" value="@Model.MembershipType" />
    </div>

    <!-- Membership Expiry (disabled + hidden) -->
    <div class="form-group">
        <label>Membership Expiry</label>
        <input type="text" class="form-control"
               value="@(Model.MembershipExpiry.HasValue ? Model.MembershipExpiry.Value.ToString("dd/MM/yyyy") : "")" disabled />
        <input type="hidden" name="MembershipExpiry" value="@(Model.MembershipExpiry.HasValue ? Model.MembershipExpiry.Value.ToString("yyyy-MM-dd") : "")" />
    </div>

    <!-- IsActive (editable) -->
    <div class="form-group">
        <label for="IsActive">Status</label>
        <select id="IsActive" name="IsActive" class="form-control">
            <option value="true" @(Model.IsActive ? "selected" : "")>Active</option>
            <option value="false" @(!Model.IsActive ? "selected" : "")>Inactive</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-secondary">Cancel</a>
</form>
