    }

    /* Tiêu đề Recipe */
    .card-title {
        font-size: 1.25rem;
        color: #8B0000;
        margin-bottom: 8px;
        font-weight: bold;
    }

    .card-text {
        font-size: 0.95rem;
        color: #555;
    }

    /* Nút "View Details" */
    .btn-view {
        background-color: #8B0000;
        color: #fff;
        padding: 8px 12px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 8px;
