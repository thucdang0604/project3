@{
    ViewData["Title"] = "Reset Password Successful";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h2>Password Reset Successful</h2>
                    <p>A new password has been sent to your email. Please check your inbox and change your password after logging in.</p>
                    <a href="@Url.Action("Login", "Account")" class="text-decoration-none">Back to Login</a>
         
                </div>
            </div>
        </div>
    </div>
</div>
