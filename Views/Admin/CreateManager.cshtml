@model JamesThewProject.Models.User
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create Manager";
}

<h1>Create Manager</h1>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form action="@Url.Action("CreateManager", "Admin")" method="post" id="createManagerForm">
    @Html.AntiForgeryToken()

    <!-- Ẩn trường Role, mặc định là Manager -->
    <input type="hidden" name="Role" value="Manager" />

    <div class="form-group mb-3">
        <label for="Email">Email</label>
        <input type="email" id="Email" name="Email" class="form-control" placeholder="Enter email" required />
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        <label for="FullName">Full Name</label>
        <input type="text" id="FullName" name="FullName" class="form-control" placeholder="Enter full name" required />
        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        <label for="DateOfBirth">Date of Birth</label>
        <input type="date" id="DateOfBirth" name="DateOfBirth" class="form-control" required />
        @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        <label for="Gender">Gender</label>
        <select id="Gender" name="Gender" class="form-control" required>
            <option value="">-- Select Gender --</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
        @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        <label for="Address">Address</label>
        <input type="text" id="Address" name="Address" class="form-control" placeholder="Enter address" required />
        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        <label for="PhoneNumber">Phone Number</label>
        <input type="tel" id="PhoneNumber" name="PhoneNumber" class="form-control" placeholder="Enter phone number" required />
        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-success">Create Manager</button>
    <a href='@Url.Action("ManageUsers", "Admin")' class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Nếu cần thêm custom validation, bạn có thể thêm đoạn code dưới đây.
        document.getElementById('createManagerForm').addEventListener('submit', function (e) {
            // Ví dụ, nếu muốn kiểm tra custom gì đó, thêm ở đây.
        });
    </script>
}
