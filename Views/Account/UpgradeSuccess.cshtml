@model JamesThewProject.Models.SubscriptionPlan
@{
    ViewData["Title"] = "Upgrade Successful";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Thay màu nền từ cam sang gradient đỏ-xanh */
    body {
        background: linear-gradient(to right, #8B0000, #2E8B57);
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
    }

    .profile-container {
        max-width: 600px;
        background: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        margin: auto;
        margin-top: 50px;
    }

    /* Tiêu đề trang Upgrade */
    .upgrade-header {
        text-align: center;
        color: #8B0000; /* Đỏ sẫm */
        font-weight: 700;
        margin-bottom: 20px;
        font-size: 28px;
        text-transform: uppercase;
        border-bottom: 2px solid #8B0000;
        padding-bottom: 10px;
    }

    .card {
        max-width: 500px;
        margin: auto;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        background: #fff;
        border: none; /* Bỏ viền mặc định */
        margin-top: 20px;
    }

    .card-header {
        text-align: center;
        font-weight: bold;
        color: #333;
        background-color: #f9f9f9;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        border: none;
        font-size: 18px;
        padding: 15px;
    }

    .card-body {
        text-align: center;
        padding: 20px;
    }

    .card-title {
        font-size: 22px;
        color: #8B0000; /* Đỏ sẫm */
        margin-bottom: 10px;
        font-weight: bold;
    }

    .card-text {
        font-size: 16px;
        color: #555;
    }

    .list-group-item {
        border: none;
        border-bottom: 1px solid #eee;
        border-radius: 0;
        font-size: 16px;
        padding: 10px 15px;
    }

        .list-group-item:last-child {
            border-bottom: none;
        }

    /* Nút "Go to Home" => xanh lá đậm */
    .btn-home {
        display: block;
        width: 100%;
        padding: 12px;
        font-size: 18px;
        font-weight: bold;
        background: #2E8B57; /* xanh lá đậm */
        border: none;
        border-radius: 8px;
        color: white;
        transition: 0.3s;
        text-align: center;
        text-decoration: none;
        margin-top: 20px;
    }

        .btn-home:hover {
            background: #228B22; /* hover sáng hơn */
        }
</style>

<div class="profile-container mt-4">
    <h2 class="upgrade-header">Congratulations!</h2>
    <p class="text-center">Your account has been upgraded to Premium.</p>

    <div class="card">
        <div class="card-header">Membership Details</div>
        <div class="card-body">
            <h4 class="card-title">@Model.PlanName</h4>
            <p class="card-text">@Model.Description</p>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Price:</strong> $@Model.Price</li>
                <li class="list-group-item"><strong>Duration:</strong> @Model.DurationInDays days</li>
            </ul>
        </div>
    </div>

    <a href="@Url.Action("Index", "Home")" class="btn-home">Go to Home</a>
</div>
