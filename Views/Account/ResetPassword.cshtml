@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Giữ layout gốc
}

<div class="reset-page mt-5">
    <div class="reset-container">
        <h2 class="reset-title">Reset Password</h2>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }

        <form asp-action="ResetPassword" method="post">
            <div class="mb-3">
                <label class="reset-label">Email:</label>
                <input type="email" name="email" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="reset-label">Phone Number:</label>
                <input type="text" name="phoneNumber" class="form-control" required />
            </div>
            <button type="submit" class="btn-reset">Reset Password</button>
        </form>

        <div class="mt-3 text-center">
            <a href="@Url.Action("Login", "Account")" class="back-link">Back to Login</a>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Scripts, if any -->
}

<style>
    /*
       Tránh override .container, .row, .card
       => Dùng class riêng: .reset-page, .reset-container
    */

    /* Trang reset, tránh override body/layout */
    .reset-page {
        /* chỉ thêm margin-top nếu cần */
        margin-top: 30px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Hộp reset */
    .reset-container {
        width: 400px; /* ấn định bề rộng */
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        /* Gradient nhẹ giữa đỏ nhạt và xanh nhạt */
        background: linear-gradient(135deg, #ffe6e6, #e6ffe6);
    }

    /* Tiêu đề */
    .reset-title {
        font-size: 24px;
        text-transform: uppercase;
        font-weight: bold;
        color: #8B0000; /* Đỏ sẫm */
        margin-bottom: 20px;
        border-bottom: 2px solid #8B0000;
        padding-bottom: 10px;
        text-align: center;
    }

    /* Label */
    .reset-label {
        font-weight: bold;
        color: #8B0000;
    }

    /* Input form-control => Bootstrap sẵn có,
       chỉ tùy chỉnh thêm nếu muốn */
    .form-control {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 10px;
        font-size: 16px;
    }

    /* Nút Reset => đỏ sẫm, hover xanh lá đậm */
    .btn-reset {
        display: block;
        width: 100%;
        margin-top: 15px;
        background-color: #8B0000;
        color: #fff;
        border: none;
        border-radius: 30px;
        padding: 12px;
        font-size: 16px;
        font-weight: bold;
        text-transform: uppercase;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-reset:hover {
            background-color: #2E8B57;
            transform: scale(1.05);
        }

    /* Link Back => màu đỏ sẫm, hover xanh lá đậm */
    .back-link {
        color: #8B0000;
        font-weight: bold;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .back-link:hover {
            color: #2E8B57;
            text-decoration: underline;
        }

    /* Alert styling (nếu cần) */
    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border-color: #f5c6cb;
    }
</style>
